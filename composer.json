{
    "name": "acquia/orca",
    "description": "An internal tool for testing all of Acquia's product modules together in the context of a realistic, functioning, best practices Drupal build",
    "license": "proprietary",
    "authors": [
        {
            "name": "Acquia Engineering",
            "homepage": "https://www.acquia.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "boedah/robo-drush": "^3.1",
        "composer/composer": "^1.7",
        "consolidation/robo": "~1",
        "phpunit/phpunit": "^4.8.35 || ^6.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "drupal/coder": "^8.2.12",
        "geerlingguy/drupal-vm": "^4.9"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AcquiaOrca\\Robo\\Plugin\\Commands\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/orca"
    ],
    "scripts": {
        "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 src",
        "phpcs": "./vendor/bin/phpcs --report-width=120 --standard=PSR2 src"
    }
}
